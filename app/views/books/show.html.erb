<h1 class="text-center">Book Details</h1>


    <div class="card" style="width: 50%; margin: 0 25%;">
        <img src="https://cdn.pixabay.com/photo/2018/01/14/23/12/nature-3082832__480.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= @book.title %></h5>
          <p class="card-text"><%= @book.description %></p>
          <%= link_to "Show", book_path(@book), class: "btn btn-outline-primary" %>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-outline-secondary" %>
          <%= link_to "Delete", book_path(@book), method: :delete, class: "btn btn-outline-danger" %>
        </div>
      </div>