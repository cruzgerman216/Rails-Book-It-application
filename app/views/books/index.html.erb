<h1>Book Listings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.description %></td>
      <td><%= link_to "Show", book_path(book)%> | <%= link_to "Edit", edit_book_path(book) %> <%= link_to "Delete", book_path(book), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create a book", new_book_path %> 